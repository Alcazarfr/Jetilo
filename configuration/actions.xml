				<nom>Moins 10 en défense</nom>
				<delai>30</delai>
				<duree>300</duree>
				<table_concernee>Territoire</table_concernee>
				<variable_concernee>TerritoireDefense</variable_concernee>
				<type_effet>Soustraction</type_effet>
